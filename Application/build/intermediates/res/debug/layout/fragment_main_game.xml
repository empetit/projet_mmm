<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LEVEL"
        android:id="@+id/levelName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/levelDescription"
        android:layout_below="@+id/levelName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTION1"
        android:id="@+id/btnAction1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTION2"
        android:id="@+id/btnAction2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnAction1"
        android:layout_toEndOf="@+id/btnAction1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTION3"
        android:id="@+id/btnAction3"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnAction2"
        android:layout_toEndOf="@+id/btnAction2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTION4"
        android:id="@+id/btnAction4"
        android:layout_alignTop="@+id/btnAction3"
        android:layout_toRightOf="@+id/btnAction3"
        android:layout_toEndOf="@+id/btnAction3" />
</RelativeLayout>
